<body>
 <main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
   <div class="row">
    <div class="col-md-3">
    
    <%= render 'books/list', books: @books %>

    </div>
   
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
      <thead>
        <tr>
         <th>image</th>
         <th>name</th>
         <th colspan="3"></th>
        </tr>
       </thead>
   　 <% @users.each do |user| %>
     <tr>
      <td>
    　<% if user.avatar.attached? %>
       <%= image_tag user.avatar, class: 'img-thumbnail', size: "100x100"%>
      <% else %>
       <%= image_tag 'default-image.jpg', class: 'img-thumbnail', size: "100x100" %>
      <% end %>
      </td>
 
      <td>
       <%= user.name %>
      </td>
      <td>
       <%= link_to "Show", user %>
      </td>
     </tr>
   　 <% end %>
     </table>
   </div>
  </div>
 </main>
</body>