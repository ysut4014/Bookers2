<body>
 <main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0" >
   <div class="row">
    <div class="col-md-3">
    
<% if user_signed_in? %>
  <h2>User info</h2>
  <% if current_user.profile_image.attached? %>
    <%= image_tag current_user.profile_image, size: "100x100" %>
  <% else %>
    <%= image_tag 'default-image', size: "100x100" %>
  <% end %> 
  <table class="table table-hover table-inverse custom-table">
    <tr>
      <th style="font-weight: bold;">name</th>
      <td style="font-weight: bold;"><%= current_user.name %></td>
    </tr>
    <tr>
      <th style="font-weight: bold;">introduction</th>
      <td style="font-weight: bold;"><%= current_user.introduction %></td>
    </tr>
  </table>
  <div class="row">
    <%= link_to edit_user_path(current_user), class: 'btn btn-outline-secondary btn-block' do %>
      <i class="fa-solid fa-user-gear" style="color: #696e77;"></i>
    <% end %> 
  </div>
<% end %>

<%= form_with model: Book.new, local: true do |f| %>
  <h2 class="mt-3">New book</h2>
  <div class="form-group">
    <%= f.label :title %><br />
    <%= f.text_field :title %><br>
  </div>
  <div class="form-group">
    <%= f.label :opinion %><br />
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit "Create Book", class: "btn btn-success" %>
  </div>
  
<% end %>

    </div>
   
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
      <thead>
        <tr>
         <th>image</th>
         <th>name</th>
         <th colspan="3"></th>
        </tr>
       </thead>
   　 <% @users.each do |user| %>
     <tr>
      <td>
    　<% if user.profile_image.attached? %>
       <%= image_tag user.profile_image, class: 'img-thumbnail', size: "100x100"%>
      <% else %>
       <%= image_tag 'default-image.jpg', class: 'img-thumbnail', size: "100x100" %>
      <% end %>
      </td>
 
      <td>
       <%= user.name %>
      </td>
      <td>
       <%= link_to "Show", user %>
      </td>
      
     </tr>
   　 <% end %>
     </table>
   </div>
  </div>
 </main>
</body>