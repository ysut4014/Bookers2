<body>
 <main>
  
  <div class="container px-5 px-sm-0">
         <p id="notice"><%= flash[:notice] %></p>
    <p id="alert"><%= flash[:alert] %></p>
    <%= yield %>
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

   <div class="row">
    <div class="col-md-3">
    
    <%= render 'books/list', user: current_user %>

    </div>

   
    <div class="col-md-8 offset-md-1">
     <h2>Books</h2>
      <table class="table table-hover table-inverse custom-table">
       <thead>
        <tr>
         <th></th>
         <th class="text">Title</th>
         <th class="text">Opinion</th>
         <th colspan="3"></th>
        </tr>
       </thead>
       
        <tbody>
<% if @books.present? && @books.any? %>     
  <% @books.each do |book| %>
    <tr>
     <td>
  <% if book.user.avatar.attached? %>
    <% if current_user == book.user %>
      <%= link_to edit_user_path(book.user) do %>
        <%= image_tag book.user.avatar, size: "100x100" %>
      <% end %>
    <% else %>
      <%= link_to user_path(book.user) do %>
        <%= image_tag book.user.avatar, size: "100x100" %>
      <% end %>
    <% end %>
  <% else %>
    <%= link_to user_path(book.user) do %>
      <%= image_tag 'default-image', size: "100x100" %>
    <% end %>
  <% end %>
      </td>      
      <td>
        <%= link_to book.title, book_path(book) %>
      </td>
      <td>
        <%= book.body %>
      </td>
    </tr>
  <% end %>
<% end %>
     </table>
   </div>
  </div>
 </main>
</body>