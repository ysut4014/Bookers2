<body>
 <main>
  <p id="notice"></p>
  
  <div class="container px-5 px-sm-0">
   <div class="row">
    <div class="col-md-3">
    
    <%= render 'books/list', books: @books %>

    </div>

   
    <div class="col-md-8 offset-md-1">
     <h2>Books</h2>
      <table class="table table-hover table-inverse custom-table">
       <thead>
        <tr>
         <th></th>
         <th class="text">Title</th>
         <th class="text">Opinion</th>
         <th colspan="3"></th>
        </tr>
       </thead>
       
        <tbody>
         
    <% @books.each do |book| %>
     <tr>
      <td>
       <% if book.user.image.attached? %>
        <%= image_tag book.user.image, size: "80x80" %>
       <% else %>
        <%= image_tag 'default-image.jpg', size: "80x80" %>
       <% end %>
      </td>
      <td>
       <%= link_to book.title, book_path(book) %>
      </td>
      <td>
       <%= book.body %>
      </td>
     </tr>
    <% end %>
     </table>
   </div>
  </div>
 </main>
</body>