<main>
 <p id="notice"></p>
 <div class="container">
  <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h1>Editing Book</h1>
  <%= form_with model: @book, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title %><br />
    <%= f.text_field :title, value: @book.title, class: "form-control" %><br>
  </div>
  <div class="form-group">
    <%= f.label :opinion %><br />
    <%= f.text_area :body, value: @book.body, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Update Book", class: "btn btn-success" %>
  </div>
   <%= link_to "Show", @book %> | <%= link_to "Back", books_path %>
  <% end %>
   </div>
  </div>
 </div>
</main>