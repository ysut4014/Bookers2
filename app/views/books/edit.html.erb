<main>
 <p id="notice"></p>
 <div class="container">
  <div class="row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h1>Editing Book</h1>
    <p id="notice"><%= flash[:notice] %></p>
    <p id="alert"><%= flash[:alert] %></p>
    <%= yield %>
    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <%= form_with model: @book, local: true do |f| %>
  <div class="form-group">
    <%= f.label :title %><br />
    <%= f.text_field :title, value: @book.title, class: "form-control" %><br>
  </div>
  <div class="form-group">
    <%= f.label :opinion %><br />
    <%= f.text_area :body, value: @book.body, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Update Book", class: "btn btn-success" %>
  </div>
   <%= link_to "Show", @book %> | <%= link_to "Back", books_path %>
  <% end %>
   </div>
  </div>
 </div>
</main>