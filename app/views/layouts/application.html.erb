<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    
    <script src="https://kit.fontawesome.com/853b12f8a1.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <%= link_to "/", class: 'navbar-brand' do %><span style="font-size: 1.25rem;">Bookers</span>
          <% end %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

             <% if user_signed_in? %>  
              <%= link_to user_path(current_user), class: 'nav-link text-white' do %>
                <i class="fa-solid fa-house" style="color: #ffffff;"></i> Home
              <% end %>
             <% else %>
              <%= link_to root_path, class: 'nav-link text-white' do %>
                <i class="fa-solid fa-house" style="color: #ffffff;"></i> Home
              <% end %>
             <% end %>
             
             
            <% if user_signed_in? %>
              <%= link_to users_path, class: 'nav-link text-white' do %>
                <i class="fa-solid fa-users" style="color: #ffffff;"></i> Users
              <% end %>
            <% end %>
            
            <% if user_signed_in? %>
              <%= link_to books_path, class: 'nav-link text-white' do %>
               <i class="fa-solid fa-book-open" style="color: #ffffff;"></i> Books
              <% end %>

            <% end %>
            
            <% if user_signed_in? %> 
              <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-white' do %>
                <i class="fa-solid fa-right-from-bracket" style="color: #ffffff" ></i> Log out
              <% end %>
            <% end %>
              
            <% unless user_signed_in? %>
              <%= link_to homes_about_path, class: 'nav-link text-white' do %>
                 <i class="fa-solid fa-link" style="color: #ffffff;"></i> About
              <% end %>
              <%= link_to new_user_registration_path, class: 'nav-link text-white' do %>
                 <i class="fa-solid fa-user-plus" style="color: #ffffff;"></i> Sign up
              <% end %>
              <%= link_to new_user_session_path, class: 'nav-link text-white' do %>
                <i class="fa-solid fa-right-to-bracket" style="color: #ffffff;"></i> Log in
              <% end %>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
<footer>
 <div class="container mt-5">
  <div class="row">
   <div class="mx-auto">
    <p>CopyRight Infratop.inc</p>
   </div>
  </div>
 </div>
</footer>
  </body>
</html>
